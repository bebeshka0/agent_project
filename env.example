# Postgres / pgvector
# When using docker-compose, host should be "db" (service name).
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me
POSTGRES_DB=vector_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Example (docker-compose network): postgresql://postgres:change_me@db:5432/vector_db
POSTGRES_CONNECTION_STRING=postgresql://postgres:change_me@db:5432/vector_db

# RAG
COLLECTION_NAME=ml_articles_collection
EMBEDDING_MODEL=intfloat/multilingual-e5-base
DOCS_FOLDER=documents

# LLM settings (xAI)
XAI_API_KEY=your_xai_api_key_here
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-4-1-fast-non-reasoning

# Misc
HF_HUB_DISABLE_XET=1

# UI
API_URL=http://api:8000


